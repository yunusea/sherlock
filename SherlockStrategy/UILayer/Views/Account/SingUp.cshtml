
<div ng-controller="UserController" class="SingUp col-md-6">
    <h2>Kayıt Ol</h2>

    <input type="text" id="UserName" ng-model="UserName" placeholder="UserName" />
    <input type="password" id="Password" ng-model="Password" placeholder="Password"/>
    <input type="text" id="EMail" ng-model="EMail" placeholder="E-Mail"/>
    <input type="submit" value="Kayıt Ol" data-ng-click="SingUpUser()" id="btnSingUp" />

    <div class="clearfix"></div>
    <div>
        <h2>Listele</h2>
        <ul ng-repeat="User in UserList">
            <li>{{UserName}}</li>
            <li>{{Email}}</li>
        </ul>
    </div>
</div>
<div class="clearfix"></div>

