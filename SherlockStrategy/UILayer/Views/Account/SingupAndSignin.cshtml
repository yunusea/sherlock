
@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sherlock Strategy</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/AngularJs_Site.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="col-md-12" ng-controller="UserController">
        <div class="col-md-12">
            <div class="col-md-6 text-center">
                <h2>Kayıt Ol</h2>
                <div class="form-horizontal">
                    <div class="form-group">
                        <input type="text" id="UserName" class="form-control" ng-model="SuUserName" placeholder="UserName" />
                    </div>
                    <div class="form-group">
                        <input type="password" id="Password" class="form-control" ng-model="SuPassword" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <input type="text" id="EMail" class="form-control" ng-model="SuEMail" placeholder="E-Mail" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-block" value="Kayıt Ol" data-ng-click="SingUpUser()" id="btnSingUp" />
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <h2>Giriş Yap</h2>
                <div class="form-horizontal">
                    <div class="form-group">
                        <input type="text" id="UserName" class="form-control" ng-model="SiUserName" placeholder="UserName" />
                    </div>
                    <div class="form-group">
                        <input type="password" id="Password" class="form-control" ng-model="SiPassword" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-block" value="Giriş Yap" data-ng-click="LoginUser()" id="btnLogin" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
