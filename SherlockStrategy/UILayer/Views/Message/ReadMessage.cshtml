@model UILayer.ViewModel.ReadMessageViewModel

<div class="col-md-12">
    <h2>Mesaj Görüntüle</h2>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="text-right col-md-6">Gönderen:</label>
            <div class="col-md-6">
                <span>@Model.SenderName</span>
            </div>
        </div>
        <div class="form-group">
            <label class="text-right col-md-6">Alıcı:</label>
            <div class="col-md-6">
                @Model.ReceiverName
            </div>
        </div>
        <div class="form-group">
            <label class="text-right col-md-6">Konu:</label>
            <div class="col-md-6">
                @Model.Message.Subject
            </div>
        </div>
        <div class="form-group">
            <label class="text-right col-md-6">Konu:</label>
            <div class="col-md-6">
                @Model.Message.MessageText
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                <input type="submit" value="Cevapla" class="btn btn-block" ng-click="Reply(@Model.Message.Id)" />
                <input type="submit" value="Geri Dön" class="btn btn-block" ng-click="BackToMessageList()" />
            </div>
        </div>
    </div>
</div>